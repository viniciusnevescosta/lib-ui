{
	"workspaces": ["libui", "docs"],
	"scripts": {
		"dev:lib": "bun --cwd lib dev",
		"dev:docs": "bun --cwd docs dev",
		"build:lib": "bun --cwd lib build",
		"build:docs": "bun --cwd docs build",
		"check": "bunx biome check --write --unsafe --no-errors-on-unmatched",
		"prepare": "husky"
	},
	"devDependencies": {
		"@biomejs/biome": "1.8.3",
		"git-format-staged": "^3.1.1",
		"husky": "^9.1.5"
	}
}
